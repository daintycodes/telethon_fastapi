# Example .env file for Docker Compose deployment
# Copy this to .env and fill in with your actual values
# DO NOT commit this file to git (add .env to .gitignore)

# Telegram API credentials (required)
TG_API_ID=your_api_id_here
TG_API_HASH=your_api_hash_here
TG_SESSION=telethon_session

# MinIO/S3 configuration (external service)
# Example: http://minio.example.com:9000 or http://localhost:9000
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=your_minio_access_key
S3_SECRET_KEY=your_minio_secret_key
S3_BUCKET_AUDIO=audio
S3_BUCKET_PDF=pdf

# Database (external Postgres service)
# Example: postgresql://user:password@postgres:5432/telethon_db
DATABASE_URL=postgresql://telethon:telethon_password@localhost:5432/telethon_db

# Authentication & security
ADMIN_API_KEY=your-optional-api-key
JWT_SECRET=your-secret-key-change-this-in-production

# Logging & monitoring (optional)
LOG_LEVEL=INFO
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
